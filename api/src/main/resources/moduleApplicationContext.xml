<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  		    http://www.springframework.org/schema/context
  		    http://www.springframework.org/schema/context/spring-context-3.0.xsd
  		    http://www.springframework.org/schema/jee
  		    http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
  		    http://www.springframework.org/schema/tx
  		    http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
  		    http://www.springframework.org/schema/aop
  		    http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
  		    http://www.springframework.org/schema/util
  		    http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<!-- Add here beans related to the API context -->

	
	<!-- Services accessible via Context.getService() -->
	<bean id="performanceMonitoringService"
					class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager">
						<ref bean="transactionManager" />
					</property>
					<property name="target">
						<bean class="org.openmrs.module.systemmetrics.api.impl.PerformanceMonitoringServiceImpl">
							<property name="performanceMonitoringDAO">
								<bean class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernatePerformanceMonitoringDAO">
									<property name="sessionFactory">
										<ref bean="sessionFactory" />
									</property>
								</bean>
							</property>
                            <property name="metricTypeDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateMetricTypeDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                            <property name="metricValueDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateMetricValueDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                            <property name="perMinMetricValueDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernatePerMinMetricValueDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                            <property name="loginValueDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateLoginValueDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                            <property name="perMinLoginValueDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernatePerMinLoginValueDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                            <property name="formsPerHourEntryDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateFormsPerHourEntryDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                            <property name="encountersPerHourEntryDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateEncountersPerHourEntryDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                            <property name="patientsPerHourEntryDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernatePatientsPerHourEntryDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>         
                            <property name="reportsPerHourEntryDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateReportsPerHourEntryDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                            <property name="visitsPerHourEntryDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateVisitsPerHourEntryDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>   
                            <property name="observationsPerHourEntryDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateObservationsPerHourEntryDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                            <property name="conceptsPerHourEntryDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateConceptsPerHourEntryDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>                                                                                
                            <property name="savedEncounterDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateSavedEncounterDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                            <property name="savedPatientDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateSavedPatientDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                            <property name="savedFormDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateSavedFormDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>         
                            <property name="ranReportDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateRanReportDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                            <property name="savedVisitDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateSavedVisitDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                            <property name="savedConceptDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateSavedConceptDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>     
                           	<property name="savedObservationDAO">
                                <bean
                                        class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateSavedObservationDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>              
						</bean>
					</property>
					<property name="preInterceptors">
						<ref bean="serviceInterceptors" />
					</property>
                    <property name="transactionAttributeSource">
                        <bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
                    </property>

	</bean>

    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.systemmetrics.api.PerformanceMonitoringService</value>
                <ref bean="performanceMonitoringService" />
            </list>
        </property>
    </bean>
	
</beans>
