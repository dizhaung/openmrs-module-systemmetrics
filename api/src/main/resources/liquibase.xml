        </createTable>
    </changeSet>
    <changeSet id="system-metrics-7" author="vineet-kumar">
        <createTable tableName="systemmetrics_encounters_per_hour">
            <column name="timestamp" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
